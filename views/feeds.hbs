{{> restaurants-tabs route='feeds'}}
<h1 class="text-light">最新動態</h1>
<hr class="border-light" />
<div class="row mt-5">
  <div class="col-md-6">
    <div class="card bg-dark text-light">
      <div class="card-header bg-secondary text-light">
        最新餐廳
      </div>
      <div class="card-body">
        {{#each restaurants}}
          <div>
            <h4>
              <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
              <small class="fs-6 text-secondary">[{{this.Category.name}}]</small>
              <img src="{{this.image}}" alt="" style="height:60px; width:60px;">
            </h4>
            <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
            <small class="text-muted">{{relativeTime this.createdAt}}</small>
            <hr class="border-light">
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card bg-dark text-light">
      <div class="card-header bg-secondary text-light">
        最新評論
      </div>
      <div class="card-body">
        {{#each comments}}
          <div>
            <h4>
              <a class="link-primary" href="/restaurants/{{this.Restaurant.id}}">{{this.Restaurant.name}}</a>
              <img src="{{this.Restaurant.image}}" alt="" style="height:60px; width:60px;">
            </h4>
            <p class="my-4" style="white-space: break-spaces;">{{this.text}}</p>
            - <a class="link-secondary" href="/users/{{this.User.id}}">{{this.User.name}}</a>
            <small class="text-muted">at {{relativeTime this.createdAt}}</small>
            <hr class="border-light">
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
