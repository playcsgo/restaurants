<div class="container">
  <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="m-3">
      <p class="m-0">Name</p>
      <input type="text form-control" name="name" value="{{user.name}}">
    </div>
    <div class="m-3">
      <p class="m-0">image</p>
      <input type="file" name="image">
    </div>
    <div class="m-3">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>