<div class="container">
  <div class="d-flex flex-row">
    <div class="m-3">
      <img src="{{ user.image }}" alt="" style="width:300px; height:300px;">
    </div>
    <div class="m-3">
      <p>{{ user.name }}</p>
      <p>{{ user.email }}</p>
      <p>{{ comments.count }} 已評論餐廳</p>
      <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
    </div>
  </div>
  
  <div class="border">
    <div style="background-color: lightgrey;">
      <p>{{ comments.count }} 已評論餐廳</p>
    </div>
    <div class="d-flex flex-row">
      {{#each comments.rows}}
        <div class="m-2">
          <a href="/restaurants/{{this.restaurantId}}">
            <img src="{{this.Restaurant.image}}" alt="" style="width:80px; height:80px;">
          </a>
        </div>
      {{/each}}
    </div>
  </div>

</div>

