{{> admin-nav route='users'}}

<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Set Role</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td scope="row">{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>
          {{#if this.isAdmin}}
          admin
          {{else}}
          user
          {{/if}}
        </td>
        <td>
          {{#if this.isAdmin}}
            <form action="/admin/users/{{this.id}}?_method=PATCH" method="post">
              <input type="hidden" name="isAdmin" value="false">
              <button type="submit" class="btn btn-link">set as user</button>
            </form>
          {{else}}
            <form action="/admin/users/{{this.id}}?_method=PATCH" method="post">
              <input type="hidden" name="isAdmin" value="true">
              <button type="submit" class="btn btn-link">set as admin</button>
            </form>
          {{/if}}
          
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>